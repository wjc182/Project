<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">
    <CheckBox
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_chose"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/shop_chose"
        android:layout_marginLeft="10dp"
        android:id="@+id/shop_car_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_car_title"
        app:layout_constraintLeft_toRightOf="@id/shop_car_image"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/shop_car_price"
        app:layout_constraintLeft_toRightOf="@id/shop_car_image"
        app:layout_constraintTop_toBottomOf="@id/shop_car_title"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/shop_car_number"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yi_chose"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:text="已选择"
        android:visibility="gone"
        />
    <TextView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/shop_shu"
        android:text="4"
        android:textSize="20dp"
        app:layout_constraintRight_toLeftOf="@id/shop_jia_number"
        app:layout_constraintTop_toBottomOf="@id/yi_chose"
        android:visibility="gone"
        />
    <TextView
        app:layout_constraintRight_toLeftOf="@id/shop_shu"
         app:layout_constraintTop_toBottomOf="@id/yi_chose"
        android:id="@+id/shop_jian_number"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:textSize="20dp"
        android:visibility="gone"
        />
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/yi_chose"
        android:id="@+id/shop_jia_number"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:visibility="gone"
        />
</androidx.constraintlayout.widget.ConstraintLayout>