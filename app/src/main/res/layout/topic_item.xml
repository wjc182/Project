<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/topic_image"
        android:layout_width="300dp"
        android:layout_margin="30dp"
        android:scaleType="center"
        android:layout_height="200dp" />
        <TextView
            app:layout_constraintTop_toBottomOf="@id/topic_image"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/topic_ai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:textColor="#070606" />

        <TextView
            android:id="@+id/topic_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#CA0522"
            android:layout_marginLeft="10dp"
            app:layout_constraintTop_toBottomOf="@id/topic_image"
            app:layout_constraintLeft_toRightOf="@id/topic_ai"
             />

        <TextView
            android:layout_marginLeft="30dp"
            android:id="@+id/topic_topic"
            app:layout_constraintTop_toBottomOf="@id/topic_ai"
          app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>